<packages xmlns="http://dd-p2.dflydev.com/2010">
    <package>
        <version>0.1</version>
        <name>Dragonfly Development CodeIgniter Vendor Libs Add-on</name>
        <url>http://github.com/dflydev/dd-ci-vendorlibs</url>
        <copyright>Copyright (c) 2010 Dragonfly Development</copyright>
        <license>Licensed under the New BSD License.</license>
        <files>
            <file name="README" />
            <file name="LICENSE.txt" />
            <file name="INSTALL.txt" />
            <glob name="configs" pattern="application/config/*.php" />
            <glob name="hooks" pattern="application/hooks/*.php" />
        </files>
        <outputs>
            <output name="dd-ci-vendorlibs">
                <includeFile name="README" />
                <includeFile name="LICENSE.txt" />
                <includeFile name="INSTALL.txt" />
                <includeGlob name="configs" />
                <includeGlob name="hooks" />
            </output>
        </outputs>
    </package>
</packages>
